<Window x:Class="Assignment4.Selection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment4"
        mc:Ignorable="d"
        Title="Selection" Height="250" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="80*"/>
        </Grid.RowDefinitions>
        <RadioButton Name="rbAES" Content="AES" HorizontalAlignment="Left" Margin="21,21,0,0" Grid.Row="1" VerticalAlignment="Top" IsChecked="True"/>
        <RadioButton Name="rbRSA" Content="RSA" HorizontalAlignment="Left" Margin="173,21,0,0" Grid.Row="1" VerticalAlignment="Top"/>

        <Button Content="Next" HorizontalAlignment="Left" Margin="403,0,0,0" Grid.Row="2" VerticalAlignment="Center" Width="70" Click="NextButtonPressed"/>
        <TextBlock HorizontalAlignment="Left" Margin="21,27,0,0" Text="Select an cryptographic algorithm" TextWrapping="Wrap" VerticalAlignment="Top"/>

    </Grid>
</Window>
